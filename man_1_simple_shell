#include <stdio.h>
#include <string.h>

extern char **environ;

void print_env(void)
{
    int i = 0;
    while (environ[i])
    {
        printf("%s\n", environ[i]);
        i++;
    }
}

int main(void)
{
    char input[1024];
    char *args[2];

    while (1)
    {
        printf("$ ");
        fgets(input, sizeof(input), stdin);

        input[strcspn(input, "\n")] = '\0'; // إزالة السطر الجديد
        args[0] = input;
        args[1] = NULL;

        if (strcmp(args[0], "env") == 0)
        {
            print_env();
            continue;
        }

        if (strcmp(args[0], "exit") == 0)
            break;

        // هنا تضع منطق fork و execve لباقي الأوامر
    }

    return 0;
}
